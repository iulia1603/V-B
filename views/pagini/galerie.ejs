        <script>
            // Script pentru actualizarea automată a galeriei la schimbarea orei
            function checkTimeUpdate() {
                const now = new Date();
                const currentHour = now.getHours();
                
                // Verificăm dacă suntem la începutul unei noi perioade
                if (currentHour === 5 || currentHour === 12 || currentHour === 20) {
                    const minutes = now.getMinutes();
                    if (minutes === 0) {
                        // Reîmprospătăm pagina la începutul unei noi perioade
                        setTimeout(() => {
                            location.reload();
                        }, 2000);
                    }
                }
            }
            
            // Verificăm la fiecare minut
            setInterval(checkTimeUpdate, 60000);
            
            // Efect de încărcare progresivă pentru imagini
            document.addEventListener('DOMContentLoaded', function() {
                const images = document.querySelectorAll('.galerie-imagine');
                
                images.forEach((img, index) => {
                    img.style.opacity = '0';
                    img.style.transform = 'translateY(20px)';
                    
                    img.onload = function() {
                        setTimeout(() => {
                            img.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                            img.style.opacity = '1';
                            img.style.transform = 'translateY(0)';
                        }, index * 100);
                    };
                    
                    // Dacă imaginea este deja încărcată
                    if (img.complete) {
                        img.onload();
                    }
                });
            });
        </script>
    </body>
